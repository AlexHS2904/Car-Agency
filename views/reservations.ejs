<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mis reservas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/Assets/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body { background: #f5f6f8; }
      .page-wrap { min-height: 100vh; padding-top: 90px; padding-bottom: 40px; }
      .reserva-card {
        border-radius: 1rem;
        background: #fff;
        box-shadow: 0 4px 18px rgba(0,0,0,.05);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      .reserva-card img {
        width: 100%;
        height: 160px;
        object-fit: cover;
      }
      .reserva-body { padding: 1rem 1.1rem 1.1rem; flex: 1 1 auto; }
      .actions { display: flex; gap: .5rem; margin-top: .75rem; flex-wrap: wrap; }
      .empty-box {
        background: #fff;
        border-radius: 1rem;
        padding: 2.5rem 2rem;
        text-align: center;
        box-shadow: 0 4px 18px rgba(0,0,0,.03);
      }
      .badge.status-pill { text-transform: capitalize; }

      .refund-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0,0,0,0.25);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
      }
      .refund-box {
        background: #e1e5ec;
        border-radius: 2.5rem;
        padding: 2.2rem 2.5rem 1.5rem;
        max-width: 520px;
        width: 90%;
        box-shadow: 0 10px 30px rgba(0,0,0,.15);
      }
      .refund-btn {
        border: none;
        background: #fff;
        padding: .5rem 1.5rem;
        border-radius: 1rem;
        font-weight: 500;
        cursor: pointer;
        display: block;
        margin-left: auto;
      }
    </style>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <div class="page-wrap">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">Mis reservas</h2>
          <a href="/catalogo" class="btn btn-outline-dark btn-sm">Rentar otro auto</a>
        </div>

        <% 
          function fechaBonita(d) {
            if (!d) return "";
            let iso;
            if (d.toISOString) {
              iso = d.toISOString().slice(0,10);
            } else {
              iso = d.toString().slice(0,10);
            }
            const [y,m,day] = iso.split("-");
            const meses = ["enero","febrero","marzo","abril","mayo","junio","julio","agosto","septiembre","octubre","noviembre","diciembre"];
            return Number(day) + " de " + meses[Number(m)-1] + " de " + y;
          }
        %>

        <% if (!reservations || reservations.length === 0) { %>
          <div class="empty-box">
            <h5 class="mb-2">Aún no tienes reservas</h5>
            <p class="text-muted mb-3">Cuando rentes un auto aparecerá aquí.</p>
            <a href="/catalogo" class="btn btn-dark btn-sm">Ir al catálogo</a>
          </div>
        <% } else { %>
          <div class="row g-4">
            <% reservations.forEach(r => { %>
              <div class="col-md-6 col-lg-4">
                <div class="reserva-card">
                  <img
                    src="<%= r.image_url && r.image_url !== '' ? r.image_url : '/Assets/Imgs/placeholder-car.jpg' %>"
                    alt="<%= r.brand %> <%= r.model %>"
                  >
                  <div class="reserva-body">
                    <h5 class="mb-1"><%= r.brand %> <%= r.model %></h5>
                    <p class="text-muted mb-2" style="font-size:.85rem;">
                      $<%= Number(r.price_per_day).toLocaleString('es-MX') %> MXN/día
                    </p>

                    <% 
                      const totalMostrar = Number(
                        (r.total_amount ?? r.computed_total ?? 0)
                      );
                    %>
                    <p class="mb-2" style="font-size:.8rem;">
                      Total: $<%= totalMostrar.toLocaleString('es-MX') %> MXN
                    </p>

                    <p class="mb-2" style="font-size:.8rem;">
                      <strong>Del:</strong> <%= fechaBonita(r.start_date) %><br>
                      <strong>Al:</strong> <%= fechaBonita(r.end_date) %>
                    </p>
                    <span class="badge status-pill bg-<%= r.status === 'confirmed' ? 'success' : (r.status === 'cancelled' ? 'secondary' : 'primary') %>">
                      <%= r.status %>
                    </span>

                    <div class="actions">
                      <% if (r.status !== 'cancelled') { %>
                        <a href="/reservas/<%= r.id %>/editar" class="btn btn-sm btn-outline-dark">
                          Reprogramar
                        </a>
                        <form action="/reservas/<%= r.id %>/cancel" method="POST" onsubmit="return confirm('¿Seguro que quieres cancelar esta reserva?');">
                          <button type="submit" class="btn btn-sm btn-outline-danger">
                            Cancelar
                          </button>
                        </form>
                      <% } else { %>
                        <small class="text-muted">Reserva cancelada</small>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      const params = new URLSearchParams(window.location.search);
      const isRefund = params.get("refund") === "1";
      const isPaid = params.get("paid") === "1";
      const diasMenos = params.get("menos") || "";
      const amountRaw = params.get("amount");

      const fmt = new Intl.NumberFormat('es-MX', {
        style: 'currency',
        currency: 'MXN'
      });

      function createOverlay(message) {
        const overlay = document.createElement("div");
        overlay.className = "refund-overlay";

        const box = document.createElement("div");
        box.className = "refund-box";

        const p = document.createElement("p");
        p.className = "mb-3";
        p.textContent = message;

        const btn = document.createElement("button");
        btn.className = "refund-btn";
        btn.textContent = "Ok";
        btn.addEventListener("click", () => {
          overlay.remove();
          const url = new URL(window.location.href);
          url.searchParams.delete("refund");
          url.searchParams.delete("menos");
          url.searchParams.delete("amount");
          url.searchParams.delete("paid");
          window.history.replaceState({}, "", url.toString());
        });

        box.appendChild(p);
        box.appendChild(btn);
        overlay.appendChild(box);
        document.body.appendChild(overlay);
      }

      if (isRefund) {
        if (amountRaw) {
          const amountNumber = Number(amountRaw);
          const amountText = isNaN(amountNumber) ? amountRaw : fmt.format(amountNumber);
          createOverlay(`El reembolso de ${amountText} se verá reflejado en 7 a 10 días hábiles.`);
        } else {
          createOverlay(`El reembolso de los ${diasMenos ? diasMenos + " día(s) menos" : "días menos"} se verá reflejado en 7 a 10 días hábiles.`);
        }
      } else if (isPaid) {
        createOverlay("Tu cambio de fechas se realizó correctamente.");
      }
    </script>
  </body>
</html>
