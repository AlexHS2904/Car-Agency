<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mis reservas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- tu css -->
    <link rel="stylesheet" href="/Assets/styles.css" />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body { background: #f5f6f8; }
      .page-wrap { min-height: 100vh; padding-top: 90px; padding-bottom: 40px; }
      .reserva-card {
        border-radius: 1rem;
        background: #fff;
        box-shadow: 0 4px 18px rgba(0,0,0,.05);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      .reserva-card img {
        width: 100%;
        height: 160px;
        object-fit: cover;
      }
      .reserva-body { padding: 1rem 1.1rem 1.1rem; flex: 1 1 auto; }
      .actions {
        display: flex;
        gap: .5rem;
        margin-top: .75rem;
      }
      .empty-box {
        background: #fff;
        border-radius: 1rem;
        padding: 2.5rem 2rem;
        text-align: center;
        box-shadow: 0 4px 18px rgba(0,0,0,.03);
      }
      .badge.status-pill { text-transform: capitalize; }
    </style>
  </head>
  <body>
    <%- include("partials/header.ejs") %>

    <% 
  function fecha(d) {
    if (!d) return "";
    let iso;
    if (d.toISOString) {
      iso = d.toISOString().slice(0, 10);
    } else {
      iso = d.toString().slice(0, 10);
    }
    const [y, m, day] = iso.split("-");
    const meses = [
      "enero", "febrero", "marzo", "abril", "mayo", "junio",
      "julio", "agosto", "septiembre", "octubre", "noviembre", "diciembre"
    ];
    const mesNombre = meses[Number(m) - 1];
    return `${Number(day)} de ${mesNombre} de ${y}`;
  }
%>


    <div class="page-wrap">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">Mis reservas</h2>
          <a href="/catalogo" class="btn btn-outline-dark btn-sm">Rentar otro auto</a>
        </div>

        <% if (!reservations || reservations.length === 0) { %>
          <div class="empty-box">
            <h5 class="mb-2">Aún no tienes reservas</h5>
            <p class="text-muted mb-3">Cuando rentes un auto aparecerá aquí.</p>
            <a href="/catalogo" class="btn btn-dark btn-sm">Ir al catálogo</a>
          </div>
        <% } else { %>
          <div class="row g-4">
            <% reservations.forEach(r => { %>
              <div class="col-md-6 col-lg-4">
                <div class="reserva-card">
                  <img
                    src="<%= r.image_url && r.image_url !== '' ? r.image_url : '/Assets/Imgs/placeholder-car.jpg' %>"
                    alt="<%= r.brand %> <%= r.model %>"
                  >
                  <div class="reserva-body">
                    <h5 class="mb-1"><%= r.brand %> <%= r.model %></h5>
                    <p class="text-muted mb-2" style="font-size:.85rem;">
                      $<%= Number(r.price_per_day).toLocaleString('es-MX') %> MXN/día
                    </p>
                    <p class="mb-2" style="font-size:.8rem;">
                      <p class="mb-2" style="font-size:.8rem;">
                      <strong>Del:</strong> <%= fecha(r.start_date) %><br>
                      <strong>Al:</strong> <%= fecha(r.end_date) %>
                    </p>
                    </p>
                    <span class="badge status-pill bg-<%= r.status === 'confirmed' ? 'success' : (r.status === 'cancelled' ? 'secondary' : 'primary') %>">
                      <%= r.status %>
                    </span>

                    <!-- acciones -->
                    <div class="actions">
                      <% if (r.status !== 'cancelled') { %>
                        <a href="/reservas/<%= r.id %>/editar" class="btn btn-sm btn-outline-dark">
                          Reprogramar
                        </a>
                        <form action="/reservas/<%= r.id %>/cancel" method="POST" onsubmit="return confirm('¿Seguro que quieres cancelar esta reserva?');">
                          <button type="submit" class="btn btn-sm btn-outline-danger">
                            Cancelar
                          </button>
                        </form>
                      <% } else { %>
                        <small class="text-muted">Reserva cancelada</small>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
