<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Mis reservas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- TU CSS -->
    <link rel="stylesheet" href="/Assets/styles.css" />
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: #f5f6f8;
      }
      .page-wrap {
        min-height: 100vh;
        padding-top: 90px;
        padding-bottom: 40px;
      }
      .reserva-card {
        border-radius: 1rem;
        background: #fff;
        box-shadow: 0 4px 18px rgba(0,0,0,.05);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      .reserva-card img {
        width: 100%;
        height: 160px;
        object-fit: cover;
      }
      .reserva-body {
        padding: 1rem 1.1rem 1.1rem;
        flex: 1 1 auto;
      }
      .status-pill {
        font-size: .7rem;
        text-transform: capitalize;
      }
      .empty-box {
        background: #fff;
        border-radius: 1rem;
        padding: 2.5rem 2rem;
        text-align: center;
        box-shadow: 0 4px 18px rgba(0,0,0,.03);
      }
    </style>
  </head>
  <body>
    <!-- header -->
    <%- include("partials/header.ejs") %>

    <div class="page-wrap">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="mb-0">Mis reservas</h2>
          <a href="/catalogo" class="btn btn-outline-dark btn-sm">Ver catálogo</a>
        </div>

        <% if (!reservations || reservations.length === 0) { %>
          <div class="empty-box">
            <h5 class="mb-2">Aún no tienes reservas</h5>
            <p class="text-muted mb-3">
              Cuando rentes un auto aquí aparecerá su información.
            </p>
            <a href="/catalogo" class="btn btn-dark btn-sm">Rentar un auto</a>
          </div>
        <% } else { %>
          <div class="row g-4">
            <% reservations.forEach(r => { %>
              <div class="col-md-6 col-lg-4">
                <div class="reserva-card">
                  <img
                    src="<%= r.image_url && r.image_url !== '' ? r.image_url : '/Assets/Imgs/placeholder-car.jpg' %>"
                    alt="<%= r.brand %> <%= r.model %>"
                  >
                  <div class="reserva-body">
                    <h5 class="mb-1"><%= r.brand %> <%= r.model %></h5>
                    <p class="text-muted mb-2" style="font-size: .85rem;">
                      $<%= Number(r.price_per_day).toLocaleString('es-MX') %> MXN/día
                    </p>

                    <p class="mb-2" style="font-size: .8rem;">
                      <strong>Del:</strong>
                      <%= r.start_date && r.start_date.toISOString ? r.start_date.toISOString().slice(0,10) : r.start_date %><br>
                      <strong>Al:</strong>
                      <%= r.end_date && r.end_date.toISOString ? r.end_date.toISOString().slice(0,10) : r.end_date %>
                    </p>

                    <span class="badge status-pill bg-<%= r.status === 'confirmed' ? 'success' : 'secondary' %>">
                      <%= r.status %>
                    </span>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
