<!-- Sección 1: Navbar-->
<section>
  <header>
    <nav
      class="navbar navbar-expand-lg bg-body-tertiary rounded fixed-top"
      aria-label="Thirteenth navbar example"
    >
      <div class="container-fluid">
        <!--Logo móvil-->
        <div class="mobile-logo-center d-block d-lg-none">
          <a href="/#Home">
            <img src="/Assets/Imgs/Logo.png" alt="Audi-logo" height="35px" width="100px">
          </a>
        </div>

        <!-- Botón hamburguesa -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarsExample11"
          aria-controls="navbarsExample11"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Contenedor colapsable del menú -->
        <div class="collapse navbar-collapse d-lg-flex" id="navbarsExample11">
          <!-- LOGO desktop -->
          <a class="navbar-brand col-lg-3 me-0 d-none d-lg-block" href="/#Home">
            <img src="/Assets/Imgs/Logo.png" alt="Audi-logo" height="35px" width="100px">
          </a>

          <!-- Menú centro -->
          <ul class="navbar-nav col-lg-6 justify-content-lg-center">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/#Home">Inicio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/#cat">Catálogo</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/#nosotros">Nosotros</a>
            </li>

            <!-- Dropdown reservas -->
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle active"
                href="#"
                id="reservasDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Reservas
              </a>
              <ul class="dropdown-menu" aria-labelledby="reservasDropdown">
                <li>
                  <a
                    class="dropdown-item"
                    href="<% if (currentUser) { %>/mis-rentas<% } else { %>/login?returnTo=/mis-rentas<% } %>"
                  >
                    Mis reservas
                  </a>
                </li>
                <li>
                  <a
                    class="dropdown-item"
                    href="<% if (currentUser) { %>/catalogo<% } else { %>/login?returnTo=/catalogo<% } %>"
                  >
                    Crear reserva
                  </a>
                </li>
              </ul>
            </li>
          </ul>

          <div class="d-lg-flex col-lg-3 pt-4 justify-content-lg-end boton-is">
            <% if (currentUser) { %>
              <!-- Si hay sesión -->
              <div class="dropdown">
                <button
                  class="btn btn-outline-secondary dropdown-toggle"
                  type="button"
                  id="userDropdown"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <%= currentUser.name || currentUser.email %>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                  <% if (currentUser.role === 'admin') { %>
                    <li><a class="dropdown-item" href="/admin/dashboard">Panel admin</a></li>
                  <% } %>
                  <li>
                    <form action="/logout" method="POST" class="px-3 py-1">
                      <button type="submit" class="btn btn-link p-0 text-danger">Cerrar sesión</button>
                    </form>
                  </li>
                </ul>
              </div>
            <% } else { %>
              <!-- Si NO hay sesión -->
              <a href="/login" class="btn-custom">Iniciar sesión</a>
            <% } %>
          </div>
        </div>
      </div>
    </nav>
  </header>
</section>
