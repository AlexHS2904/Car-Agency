<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <title>Iniciar sesión</title>

        <!-- CSS -->
        <link rel="stylesheet" href="/Assets/styles.css">

        <!-- Bootstrap -->
        <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
        />
        <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&family=M+PLUS+Rounded+1c&display=swap"
        rel="stylesheet"
        />
        <style>
    html, body {
        height: 100%;
    }

    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background: #e9ecef;
    }

    .login-main {
        margin-top: 100px;
        margin-bottom: 40px;
        display: flex;
        justify-content: center;
    }

    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 1.5rem;
    }

    .form-signin .form-floating:focus-within {
        z-index: 2;
    }

    .form-signin input[type="text"],
    .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
    }

    .form-signin input[type="password"] {
        margin-bottom: 1rem;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }

    #logo_login {
        text-align: center;
        padding-bottom: 10px;
    }

    h1 {
        font-family: "Montserrat", sans-serif !important;
        font-weight: 900 !important;
    }

    label {
        font-family: "Montserrat", sans-serif !important;
        font-weight: 500 !important;
    }

    footer {
        margin-top: auto;
    }

    /* móvil */
    @media (max-width: 576px) {
        .login-main {
        margin-top: 90px;
        padding: 0 20px;
        }
    }
</style>

  </head>

  <body class="d-flex  flex-column py-4 bg-body-tertiary">

    <%- include("partials/header.ejs") %>

    <main class="form-signin w-100 login-main">
      <form action="/login" method="POST">

        <div id="logo_login">
            <img src="/Assets/Imgs/Logo.png" alt="Logo" height="50px" width="130px">
        </div>

        <h1 class="h3 mb-3 fw-normal text-center align-items-center">Inicia sesión</h1>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger py-2 text-center">
            <%= error %>
          </div>
        <% } %>

        <!-- Correo o celular -->
        <div class="form-floating mb-2">
          <input
            type="text"
            class="form-control"
            id="inputUser"
            name="email"
            placeholder="correo@ejemplo.com"
            required
          />
          <label for="inputUser">Correo o celular</label>
        </div>

        <!-- Password -->
        <div class="form-floating mb-3">
          <input
            type="password"
            class="form-control"
            id="inputPassword"
            name="password"
            placeholder="Contraseña"
            required
          />
          <label for="inputPassword">Contraseña</label>
        </div>

        <div class="form-check text-start mb-3">
          <input class="form-check-input" type="checkbox" value="1" id="rememberMe">
          <label class="form-check-label" for="rememberMe">
            Recuérdame
          </label>
        </div>

        <button class="btn btn-outline-dark w-100 py-2" type="submit">
          Entrar
        </button>
        <br>
        <br>
        <button class="btn btn-outline-dark w-100 py-2" type="submit">
          Crear cuenta
        </button>
        <p class="mt-5 mb-3 text-body-secondary text-center">© Agencia de Autos</p>
      </form>
    </main>

        <%- include("partials/footer.ejs") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>

</html>
