<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Iniciar sesión</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->

    <link rel="stylesheet" href="/Assets/styles.css" />
    
    <!-- Fuentes -->

    <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100..900&family=M+PLUS+Rounded+1c&display=swap"
    rel="stylesheet"
    />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>

        h1, label, button{
            font-family: "Montserrat", sans-serif !important;
            font-optical-sizing: auto;
            font-weight: 400 !important;
            font-style: normal;
        }

        .form-control:focus {
            border-color: #dc3545 !important;
            box-shadow: 0 0 0 0.25rem rgba(199, 67, 67, 0.15) !important;
        }

        .form-check-input:checked {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .form-check-input:focus {
            border-color: #dc3545;
            box-shadow: 0 0 0 .25rem rgba(220, 53, 69, 0.25);
        }




      body.login-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: #ffffff;
      }

      body.login-page .container,
      body.login-page .container-fluid,
      body.login-page .row {
        max-width: 100% !important;
        width: 100% !important;
        margin: 0 !important;
      }

      .login-wrapper {
        flex: 1 0 auto;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding-top: 90px;
        padding-bottom: 40px;
      }

      .form-signin {
        max-width: 330px;
        padding: 1.5rem;
        width: 100%;
        background: transparent;
      }

      .form-signin .form-floating:focus-within {
        z-index: 2;
      }

      .form-signin input[type="email"],
      .form-signin input[type="text"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
      }

      .form-signin input[type="password"] {
        margin-bottom: 1rem;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
      }

      footer {
        margin-top: auto;
      }

      @media (max-width: 576px) {
        .login-wrapper {
          padding-top: 90px;
          padding-left: 20px;
          padding-right: 20px;
        }
      }
    </style>
  </head>
  <body class="login-page">
    <!-- HEADER -->
    <%- include("partials/header.ejs") %>

    <!-- CONTENIDO -->
    <main class="login-wrapper">
      <form action="/login" method="POST" class="form-signin">
        <h1 class="h3 mb-3 fw-normal text-center">Iniciar sesión</h1>

        <% if (typeof error !== 'undefined' && error) { %>
          <div class="alert alert-danger py-2 text-center mb-3">
            <%= error %>
          </div>
        <% } %>

        <div class="form-floating mb-2">
          <input
            type="text"
            class="form-control"
            id="floatingInput"
            name="email"
            placeholder="name@example.com"
            required
          />
          <label for="floatingInput">Email address</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="password"
            class="form-control"
            id="floatingPassword"
            name="password"
            placeholder="Password"
            required
          />
          <label for="floatingPassword">Password</label>
        </div>

        <div class="form-check text-start my-3">
          <input
            class="form-check-input"
            type="checkbox"
            value="remember-me"
            id="checkDefault"
          />
          <label class="form-check-label" for="checkDefault">
            Recordarme
          </label>
        </div>

        <button class="btn btn-dark w-100 py-2" type="submit">
            Entrar
        </button>
        <br>
        <br>
        <a class="btn btn-outline-dark w-100 py-2" href="/register">
            Crear cuenta
        </a>

        <p class="mt-5 mb-3 text-body-secondary text-center">© <%= new Date().getFullYear()%></p>
      </form>
    </main>

    <!-- FOOTER -->
    <%- include("partials/footer.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
