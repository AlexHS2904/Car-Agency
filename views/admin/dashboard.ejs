<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Panel administrador</title>
    <link rel="stylesheet" href="/Assets/styles.css">
  </head>

  <body class="admin-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar__brand">
        <span class="sidebar__icon">ðŸš—</span>
        <span class="sidebar__title">Auto Dealer</span>
      </div>
      <nav class="sidebar__nav">
        <a href="/admin/dashboard" class="sidebar__link sidebar__link--active">Dashboard</a>
        <a href="/autos" class="sidebar__link">Inventario</a>
        <a href="/ventas" class="sidebar__link">Ventas</a>
        <!-- IMPORTANTE: aquÃ­ va /admin/... -->
        <a href="/admin/autos/nuevo" class="sidebar__link">Publicar auto</a>
        <a href="/" class="sidebar__link sidebar__link--secondary" target="_blank"> Ver sitio</a>
      </nav>
    </aside>

    <!-- Contenido -->
    <main class="main">
      <header class="main__header">
        <h1 class="main__title">Dashboard</h1>
        <!-- IMPORTANTE: aquÃ­ tambiÃ©n -->
        <a href="/admin/autos/nuevo" class="btn btn--primary">+ Nuevo auto</a>
      </header>

      <section class="cards_admin">
        <article class="card_admin">
          <h2 class="card__number"><%= publicados %></h2>
          <p class="card__label">Autos publicados</p>
        </article>
        <article class="card_admin">
          <h2 class="card__number"><%= vendidos %></h2>
          <p class="card__label">Vendidos este mes</p>
        </article>
        <article class="card_admin">
          <h2 class="card__number"><%= reservados %></h2>
          <p class="card__label">Reservados</p>
        </article>
        <article class="card_admin">
          <h2 class="card__number">$<%= ingresos %></h2>
          <p class="card__label">Ingresos del mes</p>
        </article>
      </section>

      <section class="panel">
        <div class="panel__header">
          <h2>Movimientos recientes</h2>
        </div>
        <% if (movimientos.length === 0) { %>
          <p class="empty">No hay ventas recientes.</p>
        <% } else { %>
          <ul>
            <% movimientos.forEach(m => { %>
              <li>
                Venta #<%= m.id %> - <%= m.cliente_nombre || 'Cliente' %> - <%= m.fecha_venta %>
              </li>
            <% }) %>
          </ul>
        <% } %>
      </section>
    </main>
  </body>
</html>
