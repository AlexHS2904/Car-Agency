<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Publicar auto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/Assets/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body { background: #0f1214; }
      .page-wrap {
        background: #f5f6f8;
        min-height: 100vh;
        padding-top: 100px;
        padding-bottom: 40px;
      }
      .img-preview {
        width: 160px;
        height: 110px;
        object-fit: cover;
        border-radius: .75rem;
        border: 1px solid #eee;
        background: #f8f9fa;
      }
    </style>
  </head>
  <body class="admin-layout">
    <!-- Sidebar del admin -->
    <aside class="sidebar">
      <div class="sidebar__brand">
        <span class="sidebar__icon">游뚱</span>
        <span class="sidebar__title">Auto Dealer</span>
      </div>
      <nav class="sidebar__nav">
        <a href="/admin/dashboard" class="sidebar__link">Dashboard</a>
        <a href="/autos" class="sidebar__link">Inventario</a>
        <a href="/admin/autos/nuevo" class="sidebar__link sidebar__link--active">Publicar auto</a>
        <a href="/" class="sidebar__link sidebar__link--secondary" target="_blank">Ver sitio</a>
      </nav>
    </aside>

    <div class="page-wrap">
      <div class="container">
        <h3 class="mb-4">Publicar nuevo auto</h3>

        <div class="bg-white rounded-4 p-4 shadow-sm">
          <% if (typeof error !== "undefined" && error) { %>
            <div class="alert alert-danger"><%= error %></div>
          <% } %>

          <!-- importante: enctype -->
          <form action="/admin/autos/nuevo" method="POST" class="row g-3" enctype="multipart/form-data">
            <!-- t칤tulo -->
            <div class="col-12">
              <label for="title" class="form-label">T칤tulo / nombre a mostrar</label>
              <input
                type="text"
                id="title"
                name="title"
                class="form-control"
                required
                placeholder="Ej. Audi A1 2022"
              />
            </div>

            <!-- marca -->
            <div class="col-md-6">
              <label for="brand" class="form-label">Marca</label>
              <input
                type="text"
                id="brand"
                name="brand"
                class="form-control"
                placeholder="Audi"
                required
              />
            </div>

            <!-- modelo -->
            <div class="col-md-6">
              <label for="model" class="form-label">Modelo</label>
              <input
                type="text"
                id="model"
                name="model"
                class="form-control"
                placeholder="Q8"
                required
              />
            </div>

            <!-- a침o, precio, categor칤a -->
            <div class="col-md-4">
              <label for="year" class="form-label">A침o</label>
              <select id="year" name="year" class="form-select" required>
                <option value="2020" selected>2020</option>
                <option value="2026">2026</option>
                <option value="2025">2025</option>
                <option value="2024">2024</option>
                <option value="2023">2023</option>
                <option value="2022">2022</option>
                <option value="2021">2021</option>
                <option value="2019">2019</option>
                <option value="2018">2018</option>
                <option value="2017">2017</option>
                <option value="2016">2016</option>
                <option value="2015">2015</option>
                <option value="2014">2014</option>
                <option value="2013">2013</option>
                <option value="2012">2012</option>
                <option value="2011">2011</option>
                <option value="2010">2010</option>
                <option value="2009">2009</option>
                <option value="2008">2008</option>
                <option value="2007">2007</option>
                <option value="2006">2006</option>
                <option value="2005">2005</option>
                <option value="2004">2004</option>
                <option value="2003">2003</option>
                <option value="2002">2002</option>
                <option value="2001">2001</option>
                <option value="2000">2000</option>
                <option value="1999">1999</option>
                <option value="1998">1998</option>
                <option value="1997">1997</option>
                <option value="1996">1996</option>
                <option value="1995">1995</option>
                <option value="1994">1994</option>
                <option value="1993">1993</option>
                <option value="1992">1992</option>
                <option value="1991">1991</option>
                <option value="1990">1990</option>
                <option value="1989">1989</option>
                <option value="1988">1988</option>
                <option value="1987">1987</option>
                <option value="1986">1986</option>
                <option value="1985">1985</option>
                <option value="1984">1984</option>
                <option value="1983">1983</option>
                <option value="1982">1982</option>
                <option value="1981">1981</option>
                <option value="1980">1980</option>
              </select>
            </div>

            <div class="col-md-4">
              <label for="price_per_day" class="form-label">Precio por d칤a (MXN)</label>
              <input
                type="number"
                id="price_per_day"
                name="price_per_day"
                class="form-control"
                min="0"
                step="100"
                required
              />
            </div>

            <div class="col-md-4">
              <label for="category" class="form-label">Categor칤a</label>
              <select id="category" name="category" class="form-select" required>
                <option value="">-- Selecciona --</option>
                <option value="sedan">Sed치n</option>
                <option value="hatchback">Hatchback</option>
                <option value="suv">SUV</option>
                <option value="pickup">Pickup</option>
                <option value="luxury">Lujo</option>
              </select>
            </div>

            <!-- descripci칩n -->
            <div class="col-12">
              <label for="description" class="form-label">Descripci칩n</label>
              <textarea
                id="description"
                name="description"
                rows="4"
                class="form-control"
                placeholder="Detalles del auto, kilometraje, transmisi칩n, etc."
              ></textarea>
            </div>

            <!-- imagen: url y archivo -->
            <div class="col-md-6">
              <label for="image_url" class="form-label">URL de la imagen</label>
              <input
                type="url"
                id="image_url"
                name="image_url"
                class="form-control"
                placeholder="https://..."
              />
              <div class="form-text">
                Si pones URL, se usar치 esa. Si subes archivo, se usar치 el archivo.
              </div>
            </div>

            <div class="col-md-6">
              <label for="image_file" class="form-label">Subir imagen desde tu computadora</label>
              <input
                type="file"
                id="image_file"
                name="image_file"
                class="form-control"
                accept="image/*"
              />
              <div class="form-text" id="fileStatus">No hay imagen seleccionada.</div>
            </div>

            <!-- preview -->
            <div class="col-12 d-flex align-items-center gap-3 mt-2">
              <img
                src="/Assets/Imgs/placeholder-car.jpg"
                alt="Vista previa"
                id="imgPreview"
                class="img-preview"
              />
              <span class="text-muted small">Vista previa de la imagen</span>
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
              <button type="submit" class="btn btn-outline-dark">Crear nueva publicaci칩n</button>
              <a href="/admin/dashboard" class="btn btn-link">Cancelar</a>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // preview por URL
      const urlInput = document.getElementById("image_url");
      const fileInput = document.getElementById("image_file");
      const imgPreview = document.getElementById("imgPreview");
      const fileStatus = document.getElementById("fileStatus");

      if (urlInput) {
        urlInput.addEventListener("input", () => {
          if (urlInput.value.trim() !== "") {
            imgPreview.src = urlInput.value.trim();
          }
        });
      }

      if (fileInput) {
        fileInput.addEventListener("change", (e) => {
          const file = e.target.files[0];
          if (file) {
            const reader = new FileReader();
            reader.onload = (ev) => {
              imgPreview.src = ev.target.result;
            };
            reader.readAsDataURL(file);
            fileStatus.textContent = "Imagen seleccionada: " + file.name;
          } else {
            fileStatus.textContent = "No hay imagen seleccionada.";
            imgPreview.src = "/Assets/Imgs/placeholder-car.jpg";
          }
        });
      }
    </script>
  </body>
</html>
